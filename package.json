{
  "name": "ai-code-review-action",
  "version": "1.0.0",
  "description": "AI-powered code review GitHub Action",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "jest --testPathPattern=performance",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:debug": "jest --verbose --detectOpenHandles",
    "test:perf": "node scripts/run-performance-tests.js",
    "test:perf:quick": "node scripts/run-performance-tests.js --quick",
    "test:perf:stress": "node scripts/run-performance-tests.js --stress",
    "test:perf:iterations": "node scripts/run-performance-tests.js --iterations 5",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.js",
    "test:fix": "jest --passWithNoTests --verbose"
  },
  "keywords": [
    "github-action",
    "ai",
    "code-review",
    "openai",
    "gpt-4"
  ],
  "author": "AI Code Review Team",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.0"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3"
  }
}
